---
/* eslint-disable @typescript-eslint/no-unused-vars, no-unused-vars */
import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/layout/footer';
import Navbar from '@/components/layout/navbar';
import Tracking from '@/components/Tracking.astro';

// Removed Banner (template ad) as part of cleanup

const { title, description, image } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <Tracking />
  </head>
  <body class={`min-h-screen antialiased flex flex-col relative`}>
    <div class="h-10 bg-yellow-500 text-black text-sm font-medium p-2 text-center flex justify-center items-center">
      Not production ready
    </div>
    <Navbar currentPage={currentPath} client:load />
    <main class="flex-1"><slot /></main>
    <Footer client:load />
  </body>
</html>
